 <div id="app">
    <p>{{message}}</p>
    <!-- <p>{{v1}} + {{v2}}</p> -->

    <div class="input-group">
      <label for="quantidadeproduto">Quantidade e Produto</label>
      <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" v-model="quantidadeproduto">
    </div>
    <div class="input-group">
      <label for="endereço">Endereço</label>
      <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" v-model="endereço">
    </div>
    <br>
    <button type="button" class="btn btn-primary" @click="enviar">Enviar</button>
    <br>
    <br>

    <table class="table table-bordered">
      <tr>
        <th>Quantidade e Produto</th>
        <th>Endereço</th>
        <th>Opções</th>
      </tr>
      <tr v-for="(item, index) in someData.body">
        <td v-if="exibir != index">{{ item.quantidadeproduto }}</td>
        <td v-if="exibir === index"><input type="text" class="form-control" v-model="item.quantidadeproduto"></td>
        <td v-if="exibir != index">{{item.endereço}}</td>
        <td v-if="exibir === index"><input type="text" class="form-control" v-model="item.endereço">
        </td>
        <td>
            <button type="button" class="btn btn-default" @click="editar(index)">Editar</button>
            <button type="button" class="btn btn-default" @click="excluir(item.id)">Excluir</button>
            <button type="button" class="btn btn-default" @click="atualizar(item.id, item)">Atualizar</button></td>

          </tr>
