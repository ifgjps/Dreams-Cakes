<script>
  var app = new Vue({
    el: '#app',
    data: {
      message: '',
      v1: '',
      v2: '',
      quantidadeproduto: '',
      endereço: '',
      someData: '',
      exibir: null,
      //resultado: ''
    },
    created: function () {
     this.listar();
    },
    methods: {
      enviar: function () {
        this.$http.post('http://localhost:3000/api/v1/criar', { quantidadeproduto: this.quantidadeproduto, endereço: this.endereço }).then(response =>{
          this.listar();
          this.quantidadeproduto = '';
          this.endereço = '';
        });
      },
      listar: function(){
        this.$http.get('http://localhost:3000/api/v1/pesquisar').then(response => {
        console.log(response)

        // get body data
        this.someData = response;

      }, response => {
        // error callback
      });
    },

      excluir: function(id){
        this.$http.delete('http://localhost:3000/api/v1/deletar/'+id).then(response => {
        console.log(response)

        // get body data
        this.someData = response;

      }, response => {
        // error callback
      });
      },

      atualizar: function(id, body){
       
        this.$http.put('http://localhost:3000/api/v1/atualizar/'+id, body).then(response => {
        

        // get body data
        this.someData = response;
        this.editar(null);

      }, response => {
        // error callback
      });
       },
       editar: function(value){
         this.exibir = value;
       }
      }

      //calcular: function(v1, v2){
      //this.resultado = parseInt(v1) + parseInt(v2)
      //}
    }
  ,)
</script>
<script>
$(document).ready(function(){
  // Add smooth scrolling to all links in navbar + footer link
  $(".navbar a, footer a[href='#myPage']").on('click', function(event) {
    // Make sure this.hash has a value before overriding default behavior
    if (this.hash !== "") {
      // Prevent default anchor click behavior
      event.preventDefault();

      // Store hash
      var hash = this.hash;

      // Using jQuery's animate() method to add smooth page scroll
      // The optional number (900) specifies the number of milliseconds it takes to scroll to the specified area
      $('html, body').animate({
        scrollTop: $(hash).offset().top
      }, 900, function(){
   
        // Add hash (#) to URL when done scrolling (default click behavior)
        window.location.hash = hash;
      });
    } // End if
  });
  
  $(window).scroll(function() {
    $(".slideanim").each(function(){
      var pos = $(this).offset().top;

      var winTop = $(window).scrollTop();
        if (pos < winTop + 600) {
          $(this).addClass("slide");
        }
    });
  });
})
</script>
